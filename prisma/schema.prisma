datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}


model ReviewedAlbum {
    id                     Int             @id @default(autoincrement())
    createdAt              DateTime        @default(now())
    artist                 Artist          @relation(fields: [artist_db_id], references: [id])
    artist_db_id           Int
    name                   String
    spotify_id             String          @unique
    release_date           String
    release_year           Int
    image_urls             String          @db.Text       //JSON object of array of urls
    scored_tracks          String          @db.Text        //JSON object of array of tracks
    best_song              String
    worst_song             String
    runtime                String?
    review_content         String?         @db.Text
    review_score           Float?
    review_date            String?

    @@index([artist_db_id])

}

model Artist{
    id                     Int             @id @default(autoincrement())
    name                   String
    spotify_id             String          @unique
    image_urls             String          @db.Text //JSON object of array of urls
    albums                 ReviewedAlbum[]
    average_score          Float
    leaderboard_position   Int?
}

model BookmarkedAlbum {
    id                     Int             @id @default(autoincrement())
    name                   String
    spotify_id             String          @unique
    image_url              String          @db.Text //JSON object of array of urls
    artist_name            String
    artist_spotify_id      String
    release_year           Int
    release_date           String
}

